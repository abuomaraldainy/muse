<%=form_for @contact , html: { multipart: true } do |f| %> 

	<%=f.label :name %><br/> 
	<%=f.text_field :name, required: true %><br/><br/> 

	<%=f.label :email %> <br/>
	<%=f.text_field :email, required: true %><br/><br/> 

	<%=f.label :message %><br/> 
	<%=f.text_area :message, :size => '30x10', as: :text, required: true %><br/><br/> 

	<dev class="hidden">
		<%=f.label :nichname %><br/> 
		<%=f.text_field :nickname, hint: 'Leave this field blank' %><br/><br/> 
	</dev>
	<%=f.submit :Send %><br/> 

<% end %>	
