<%=form_for @post , html: { multipart: true } do |f| %> 

	<%=f.file_field :image %><br/><br>
	<%=f.label :title %><br/> 
	<%=f.text_field :title %><br/><br/> 

	<%=f.label :link %> <br/>
	<%=f.text_field :link %><br/><br/> 

	<%=f.label :description %><br/> 
	<%=f.text_area :description, :size => '30x10' %><br/><br/> 
	<%=f.submit %><br/> 

<% end %>	

